<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="First name"/>
        <TextBox x:Name="FirstName" Grid.Column="1" Grid.Row="0" />
        <Label Grid.Column="0" Grid.Row="1" Content="Last name"/>
        <TextBox x:Name="LastName" Grid.Column="1" Grid.Row="1" />
        <Label Grid.Column="0" Grid.Row="2" Content="Address"/>
        <TextBox x:Name="Address" Grid.Column="1" Grid.Row="2" />
        <Button x:Name="SayHi" Content="Say Hi!" Grid.Column="0" Grid.Row="3"  Grid.ColumnSpan="2" />
    </Grid>
</Window>
