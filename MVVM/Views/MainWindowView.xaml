<Window x:Class="MVVM.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight" WindowStyle="ToolWindow"  >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="100" Width="*"/>
            <ColumnDefinition MinWidth="100" Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="First name"/>
        <TextBox x:Name="Ctx_FirstName" Grid.Column="1" Grid.Row="0" />
        <Label Grid.Column="0" Grid.Row="1" Content="Last name"/>
        <TextBox x:Name="Ctx_LastName" Grid.Column="1" Grid.Row="1" />
        <Label Grid.Column="0" Grid.Row="2" Content="Town"/>
        <TextBox x:Name="Ctx_Address_Town" Grid.Column="1" Grid.Row="2" />
        <Label Grid.Column="0" Grid.Row="3" Content="Post Code"/>
        <TextBox x:Name="Ctx_Address_PostCode" Grid.Column="1" Grid.Row="3" />
        <Button x:Name="SayHi" Content="Say Hi!" Grid.Column="0" Grid.Row="4"  Grid.ColumnSpan="2" />
    </Grid>
</Window>
